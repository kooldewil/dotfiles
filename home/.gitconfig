[user]
	name = kooldewil
	email = shaunakt@gmail.com

[core]
	editor = nano
	autocrlf = input
	excludesfile = ~/.gitignore_global

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	default = simple
	autoSetupRemote = true

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = cyan

[alias]
	# Short status
	s = status -sb
	
	# Add all
	aa = add --all
	
	# Commit
	c = commit
	cm = commit -m
	
	# Pretty log
	l = log --pretty=format:'%C(yellow)%h%C(reset) - %C(cyan)%an%C(reset), %C(green)%ar%C(reset) : %s'
	lg = log --graph --pretty=format:'%C(yellow)%h%C(reset) - %C(cyan)%an%C(reset), %C(green)%ar%C(reset) : %s' --abbrev-commit
	
	# Show branches
	branches = branch -a
	
	# Undo last commit
	undo = reset HEAD~1 --mixed
	
	# Amend last commit
	amend = commit --amend --no-edit
	
	# Show diff of last commit
	last = diff HEAD^
	
	# Stash
	stash-all = stash save --include-untracked

[diff]
	tool = default-difftool

[merge]
	tool = default-mergetool
	conflictstyle = diff3

[fetch]
	prune = true

[help]
	autocorrect = 1
