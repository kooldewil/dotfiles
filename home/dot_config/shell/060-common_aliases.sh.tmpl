# Common Aliases
# Shell aliases for productivity

# Enable colors
autoload -U colors && colors

# ─────────────────────────────────────────────────────────────────────────────
# Navigation
# ─────────────────────────────────────────────────────────────────────────────
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ~='cd ~'

# ─────────────────────────────────────────────────────────────────────────────
# Modern CLI Tool Replacements
# ─────────────────────────────────────────────────────────────────────────────

# Better ls with eza (if installed)
if command -v eza &> /dev/null; then
  alias ls='eza --icons'
  alias ll='eza -l --icons --git'
  alias la='eza -la --icons --git'
  alias lt='eza --tree --icons --level=2'
  alias tree='eza --tree --icons'
else
  alias ll='ls -lh'
  alias la='ls -lah'
fi

# Better cat with bat (if installed)
if command -v bat &> /dev/null; then
  alias cat='bat --style=plain'
  alias catn='bat'  # bat with line numbers and everything
fi

# ─────────────────────────────────────────────────────────────────────────────
# Git Aliases
# ─────────────────────────────────────────────────────────────────────────────
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gpl='git pull'
alias gl='git log --oneline --graph --decorate'
alias gd='git diff'
alias gco='git checkout'
alias gb='git branch'

# ─────────────────────────────────────────────────────────────────────────────
# Chezmoi Aliases
# ─────────────────────────────────────────────────────────────────────────────
alias cm='chezmoi'
alias cma='chezmoi apply'
alias cme='chezmoi edit'
alias cmd='chezmoi diff'
alias cmcd='chezmoi cd'
alias cmu='chezmoi update'

# ─────────────────────────────────────────────────────────────────────────────
# System & Utilities
# ─────────────────────────────────────────────────────────────────────────────
alias brewup='brew update && brew upgrade && brew cleanup'
alias zshconfig='${EDITOR:-nano} ~/.zshrc'
alias reload='exec zsh'
alias path='echo $PATH | tr ":" "\n"'
alias ports='lsof -i -P -n | grep LISTEN'

{{- if eq .chezmoi.os "darwin" }}
# ─────────────────────────────────────────────────────────────────────────────
# macOS Specific
# ─────────────────────────────────────────────────────────────────────────────

# Show/hide hidden files in Finder
alias showfiles='defaults write com.apple.finder AppleShowAllFiles YES && killall Finder'
alias hidefiles='defaults write com.apple.finder AppleShowAllFiles NO && killall Finder'

# Empty trash
alias emptytrash='sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash'

# Flush DNS cache
alias flushdns='sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder'

# Open current directory in Finder
alias finder='open -a Finder .'

# Get macOS software updates
alias update='sudo softwareupdate -i -a'

# Lock screen
alias afk='pmset displaysleepnow'
{{- end }}
